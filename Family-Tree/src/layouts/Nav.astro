---
import Header from "./Header.astro";
---

<style>
  @font-face 
  {
      font-family: gilroy;
      src: url(/gilroy/Gilroy-Regular.ttf);
  }


  nav
  {
    background-color: #000;
  }

  #navbar
  {
    /* padding: 1.2em; */
    background: none;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
  }

  label
  {
    padding: 0.5em; 
    background: none;
    color: #fff;
  }

  #languageSwitcher
  {
    padding: 0.5em;
    background: none;
    border-radius: 10px;
    border: none;
    color: #fff;
    box-shadow: rgba(255, 255, 255, 0.886) 0px 3px 8px;
  }

  #theme-toggle
  {
    background-color: rgb(23, 23, 23);
    border-radius: 20px;
    padding: 0.2em;
    border: none;
    box-shadow: rgb(255, 255, 255) 0px 3px 8px;
  }

  #theme-toggle:hover
  {
    transform: scale(1.2);
  }

</style>

<nav>
  <div id="navbar">
    <Header/>
    <!-- <label for="languageSwitcher" data-i18n="language">Choose Language</label> -->
    <select id="languageSwitcher">
      <option value="en">English</option>
      <option value="fr">French</option>
      <option value="de">German</option>
    </select>
    <button id="theme-toggle">&#128161;</button>
  </div>
</nav>
