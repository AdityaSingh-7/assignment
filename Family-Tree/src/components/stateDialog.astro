<style>
    @font-face 
    {
        font-family: gilroy;
        src: url(/gilroy/Gilroy-Regular.ttf);
    }

    span
    {
        padding-right: 1.5em;
    }

    #navbar {
        position: fixed;
        top: 0; 
        left: 0;
        width: 100%;
        background-color: rgb(0, 0, 0);
        z-index: 99;
        display: flex;
        justify-content: end;
        gap: 20px;
    }

    button {
        font-family: "gilroy";
        margin-top: 0.8em;
        margin-right: 1em;
        margin-bottom: 1em;
        padding: 0.8em;
        border: none;
        border-radius: 10px;
        font-size: 1em;
        font-weight: 600;
        cursor: pointer;
    }
    
    a{
        text-decoration: none;
        color: #000;
    }

    #fontSwitcher
    {
        padding: 0;
        margin-top: 1em;
        background-color: #ffffff;
        font-weight: 600;
        text-align: center;
        height: 3em;
        border-radius: 10px;
        box-shadow: rgba(255, 255, 255, 0.886) 0px 2px 5px;
    }

    @media screen and (max-width: 500px)
    {
        #navbar
        {
            justify-content: center;
        }
        button
        {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 3em;
        }
    }
</style>

<div id="navbar">
    <button><a href="/">Home</a></button>
    <select id="fontSwitcher">
        <option value="Gilroy">Gilroy</option>
        <option value="Arial, sans-serif">Arial</option>
        <option value="Verdana, sans-serif">Verdana</option>
        <option value="Times New Roman, serif">Times New Roman</option>
        <option value="Courier New, monospace">Courier New</option>
        <option value="Georgia, serif">Georgia</option>
    </select>
    <button onclick="openDialog()">&#x3F;</button>
</div>

<dialog id="myDialog">
    <div class="tree">
        <span>&#128205 : State</span>
        <span>&#x1F3DB : Capital</span>
        <span>&#x1F697; : Vehicle Code</span>
        <span>&#x1F5E3 : Languages</span>
    </div>
</dialog>

<script client : only>
    const dialog = document.getElementById('myDialog');
    const fontSwitcher = document.getElementById('fontSwitcher');

    function openDialog() {
        dialog.showModal();
    }

    dialog.addEventListener('click', () => dialog.close());

    fontSwitcher.addEventListener('change', (event) => {
        document.body.style.fontFamily = event.target.value; // Change the font of the body
    });
</script>